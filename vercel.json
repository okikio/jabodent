{
    "cleanUrls": true,
    "rewrites": [
        {
            "source": "/images/(.*)",
            "destination": "https://res.cloudinary.com/okikio-assets/image/upload/$1"
        },
        {
            "source": "/polyfill/webanimations.js",
            "destination": "https://cdn.polyfill.io/v3/polyfill.min.js?features=WebAnimations&flags=always"
        },
        {
            "source": "/polyfill/polyfill.js",
            "destination": "https://cdn.polyfill.io/v3/polyfill.min.js?features=default,es2015,es2016,es2017,es2018,Object.entries,fetch,IntersectionObserver,IntersectionObserverEntry,smoothscroll,matchMedia,localStorage,getComputedStyle,Element.prototype.scrollIntoView"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "max-age=60, public"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=63072000; includeSubDomains; preload"
                },
                {
                    "key": "Accept-CH",
                    "value": "DPR, Viewport-Width, Width"
                },
                {
                    "key": "X-UA-Compatible",
                    "value": "IE=edge"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self'; font-src 'self' https://fonts.gstatic.com; style-src 'self' 'unsafe-inline'; img-src 'self' https://res.cloudinary.com https://okikio.dev data:; script-src 'self' https://res.cloudinary.com https://polyfill.io; connect-src 'self'; block-all-mixed-content; upgrade-insecure-requests; base-uri 'self'; object-src 'none'; worker-src 'self'; manifest-src 'self'; media-src 'self' https://res.cloudinary.com/; form-action 'self'; frame-ancestors 'self';"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "geolocation=(), microphone=(), usb=(), sync-xhr=(self), camera=()"
                },
                {
                    "key": "Link",
                    "value": "</css/app.min.css>; rel=preload; as=style, </fonts/manrope-700-latin.woff2>; rel=preload; as=font; type=font/woff2; crossorigin=anonymous, </fonts/playfair-display-900-latin.woff2>; rel=preload; as=font; type=font/woff2; crossorigin=anonymous, </js/theme.min.js>; rel=preload; as=script"
                }
            ]
        },
        {
            "source": "/(css|js)/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                }
            ]
        },
        {
            "source": "/(fonts|favicon)/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(polyfill|images)/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, s-maxage=604800, max-age=31536000"
                }
            ]
        },
        {
            "source": "/manifest.json",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000"
                },
                {
                    "key": "Content-Type",
                    "value": "application/manifest+json"
                }
            ]
        }
    ],
    "github": {
        "silent": true
    }
}