extends /layouts/layout.pug

block hero
  -
    let { services } = self;

  section.relative.h-screen.bg-primary.fixed-img-container.min-h-500(class="lt-sm:h-60-screen")
    .absolute.top-0.left-0.w-full.h-full
      //- src: "cloudinary/e_improve/waves",
      +image({
        src: "cloudinary/stoney-wave",
        alt: "An image of waves hitting the stoney edge of a beach by @johnonolan on unsplash.",
        class: "fixed-img",
        figclass: "theme-surface fixed-img-container min-h-300",
        loading: "lazy"
      })(width="100vw" height="100vh")
    .hero-overlay.absolute.top-0.left-0.h-full.w-full.loaded
    .relative.flex.flex-col.h-full.justify-center.text-white.z-5
      section.self-center.text-center.px-5
        h1.font-bold.font-title.tracking-wider.layer(class=" lt-sm:text-5xl sm:text-4.5xl md:text-5xl lg:text-6xl").intro-animation Jabodent
          span.hidden(class="sm:inline")  Offshore Consultants
        h2(class="md:text-2xl lt-md:text-lg w-full max-w-screen-sm m-auto md:mt-5 px-6 sm:px-24 md:leading-9").leading-7.pt-3.intro-animation Offshore Consultants that deliver. Our moto is Integrity, Innovation & Excellence.
        button.no-tap-highlight.mb-5.scroll-btn.cursor-pointer.scroll.text-secondary.z-10.border-2.border-dashed.border-transparent.rounded.intro-animation(class="focus:outline-none py-2 learn-more" type="button" role="button")
          .scroll-mouse
          .text-sm.pt-2.font-normal.tracking-widest.uppercase scroll

  section.bg-black.text-white.w-full.scroll-point
    .px-5.mx-auto.w-full.max-w-screen-md.py-24(class="lt-md:py-12 2xl:max-w-screen-lg")
      h3.text-2xl.mb-6.font-bold.intro-animation About Us
      p.leading-8.text-lg.intro-animation We are an independent marine specialist organization inspired to serve the Marine Oil and Gas communities with reliable and consistent delivery.
      .mt-16.intro-animation
        span.text-lg.text-secondary
          +learn-more("./about.html", "Learn why you can trust us to deliver.")


block content
  section.theme-surface.theme-text
    .px-5.pt-8.mx-auto.w-full.max-w-screen-md(class="md:pt-24 2xl:max-w-screen-lg").intro-animation
      h3.text-2xl.mb-6.font-bold.intro-animation Mission & Vision
      p.leading-8.text-lg.intro-animation Our Vision is to be a leading African Marine, Oil and Gas player with global brand visibility by the year 2023. Our Mission is to deliver customer centric, innovative, well priced services.

    .text-black.flex.w-full.pt-12
      .flex-grow
      section.bg-secondary.w-full.max-w-screen-md.text-lg(class="2xl:max-w-screen-lg")
        .py-12.px-5.w-full(class="sm:px-10")
          h3.text-2xl.mb-6.font-bold Skills & Services

          ul.leading-8.list-disc.list-inside
            each service, index in services
              if index < 8
                li=`${(service.title.replace(/\w+/g, w => (w[0].toUpperCase() + w.slice(1).toLowerCase()))).replace(/sms/i, "SMS")}`

          //- .mt-16
          p.pt-2  ... and more.
            //- li
          .mt-16
            //- span  ... and more,
            //- span=" "
            +learn-more("./services.html", "Take a look at the full list of services we offer.")
      .flex-grow.bg-secondary

    .mx-auto.w-full.max-w-screen-lg.flex.flex-wrap.overflow-hidden.py-5(class="2xl:max-w-screen-xl")
      section.col.px-5(class="sm:max-w-1/2 md:max-w-1/4")
        .w-full.flex.mx-auto.my-5
          .h-12.w-12.flex.justify-center.bg-secondary.mr-5
            i.icon.text-3xl.self-center.text-black
              +icon("more_time")
          section.self-center
            h4.text-lg.font-bold.text-lg 21+
            p Years of Experience
      section.col.px-5(class="sm:max-w-1/2 md:max-w-1/4")
        .w-full.flex.mx-auto.my-5
          .h-12.w-12.flex.justify-center.bg-secondary.mr-5
            i.icon.text-3xl.self-center.text-black
              +icon("book")
          section.self-center
            h4.text-lg.font-bold.text-lg 154+
            p Projects Completed
      section.col.px-5(class="sm:max-w-1/2 md:max-w-1/4")
        .w-full.flex.mx-auto.my-5
          .h-12.w-12.flex.justify-center.bg-secondary.mr-5
            i.icon.text-3xl.self-center.text-black.text-lg
              +icon("thumb_up_alt")
          section.self-center
            h4.text-lg.font-bold.text-lg 785+
            p Happy Clients
      section.col.px-5(class="sm:max-w-1/2 md:max-w-1/4")
        .w-full.flex.mx-auto.my-5
          .h-12.w-12.flex.justify-center.bg-secondary.mr-5
            i.icon.text-3xl.self-center.text-black.text-lg
              +icon("emoji_events")
          section.self-center
            h4.text-lg.font-bold.text-lg 14+
            p Awards Won

  section.theme-bg.overflow-hidden.relative
    .absolute.top-0.left-0.w-full.h-full
      +image({
        src: "cloudinary/e_improve/e_art:hokusai/golden-hour",
        alt: "An image of a sunset over a large body of water, by @jbcreate_ on Unsplash.",
        figclass: "theme-surface  w-full min-h-300"
      })(width="100vw" height="300px")
    .px-16.py-24.w-full.relative.gradient.theme-text(class="md:w-10/12")
      section.max-w-screen-md.mx-auto(class="2xl:max-w-screen-lg")
        section.relative.max-width
          h3.text-3xl.mb-10.font-bold Why Choose Us?
          section
            h4.text-xl.mb-2 Certified Experience
            p.leading-8.mb-12.text-lg Experience of Certified industry professionals.

          section
            h4.text-xl.mb-2 Great Teamwork
            p.leading-8.mb-12.text-lg Teamwork that makes dreams work.

          section
            h4.text-xl.mb-2 Modern Technology
            p.leading-8.mb-12.text-lg High quality equipment. Tools used by the best of the best.

          .mt-16.text-lg
            +learn-more("./services.html", "Find out how we deliver quality in all our services.")

  section.carousel.theme-surface.relative.pt-6#Carousel(data-block="Carousel")
    h3.theme-text.text-3xl.font-medium.text-center Clients & Testimonials
    +carousel-buttons

    mixin carousel-item(value)
      -
        let quote = value.quote;
        let name = value.name;
        let image = value.image;

      section.carousel-item
        .theme-text.px-5.py-24.mx-auto.w-full.max-w-screen-sm(class="lt-md:py-12")
          h4.text-4xl.text-center.tracking-wide.font-bold “#{quote}”
          section.flex.justify-center.w-full.px-5.mx-auto
            .mt-10.flex
              .h-12.w-12.bg-blue-400.mr-5.rounded-md.person.overflow-hidden
                +image(Object.assign({ figclass: "" }, image))(width="3rem" height="3rem")
              p.self-center.text-lg.font-semibold= name

    section.carousel-container.relative.w-full
      .carousel-viewport.flex.flex-no-wrap
        +carousel-item({
          quote: "Absolutely the best video call solution for medium sized teams.",
          name: "Jane Doe — Tesla"
        })

        +carousel-item({
          quote: "Amazing support, and the dedication to complete tasks.",
          name: "Jane Doe — Tesla"
        })

        +carousel-item({
          quote: "Amazing support, and the dedication to complete tasks. Absolutely the best video call solution for medium sized teams.",
          name: "Jane Doe — Tesla"
        })

    +carousel-dots

  //- section.bg-primary
  //-   +contact
