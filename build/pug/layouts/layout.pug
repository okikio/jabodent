          html[data-theme="dark"] {
              --bg: #fff;
              --bg-invert: black;

              --surface: #d5d2e4;
              --surface-invert: #232325;

              --text: #000000;
              --text-invert:  #ffffff;
          }
        }

        @media (prefers-color-scheme: dark) {
