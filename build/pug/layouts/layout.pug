  body
    .splashscreen-overlay
    .splashscreen
      .splashscreen-inner.theme-text
        .flex.flex-row(class="md:text-5xl").text-3xl.font-extrabold
          +icon("jabodent")(class="splashscreen-icon self-center mr-4")
          div Jabodent
      .splashscreen-bg
    .search-overlay
    .search-banner.px-5.py-24.overflow-y-auto.h-full
      .search-inner.mx-auto.max-w-screen-sm.w-full.pt-5
        .search-container.animate.px-4
          i.icon.text-2xl.self-center
            +icon("search")
          input.search-input.font-normal.self-center(type="text", placeholder="Type to start the search..." role="search" aria-label="Searchbox")
          button.clear-search.self-center.z-10.ml-5.bg-translucentLight.text-black.rounded-full.flex.text-2xl(class="hover:bg-translucentDark hover:text-translucentLight" type="button", title="Clear search")
            i.icon.w-full.justify-center.text-2xl.self-center
              +icon("clear")
        .search-results.animate.theme-text.py-5
        .new-search.animate.theme-text.show.flex.justify-center.py-5
          .self-center.text-center
            .py-5
              p.text-lg.font-bold Waiting for input
              p.text-base Don't be shy start typing.
            figure(itemprop="image")
              img(src="/search-illustration.svg" alt="An image of a lady looking at a plant. From unDraw." loading="lazy" itemprop="url")
        .no-results.animate.theme-text.hide.px-5.text-center.text-lg No results...
    +navbar

    div(data-wrapper)
      block hero
      section
        block social
        main#main.scroll-point
          block content
          block footer
            +back-to-top
            +footer

    script(src="/js/legacy.min.js", nomodule)
    script(src="/js/modern.min.js", type="module" defer)
