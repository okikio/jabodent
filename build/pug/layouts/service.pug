extends /layouts/layout.pug

block hero

block content
  .bg-black.block.relative
    -
      let { title, description, article } = service;
      let image = Object.assign({ src: "cloudinary/city", alt: "An image of ... by ... on unsplash." }, service.image);

    section.text-white.w-full.relative.block
      .pt-32.mx-auto.w-full.max-w-screen-xl.container(class="md:px-5")
        .mx-auto.w-full.tracking-wide.max-w-screen-md(class="lt-md:px-5")
          span.font-light.lowercase.capitalize.text-gray-600.tracking-wider.text-sm
            a.underline(href="/services.html") Our Services
            |  \
          .text-lg.w-full.leading-snug.tracking-wider.layer.break-words
            h1(class="sm:text-4xl md:text-5xl").text-3xl.font-title.font-medium= title
          p.tracking-wide.leading-8.text-lg.text-gray-400.pt-8.pb-12= description

        .relative.w-full.h-84.clearfix
          +image(image)
          figcaption.relative.block.w-full.max-w-screen-md.mx-auto.block.tracking-wide.font-light.font-default.text-gray-600.text-center.text-sm.py-4.leading-relaxed Figure: #{image.alt}

    div.pt-24
      section.mx-auto.text-white.w-full.max-w-screen-md
        .px-5.tracking-wide
          section.pb-10.text-lg.leading-9.font-normal
            section.clearfix
              if article[0] !== "_"
                span.float-left.pr-2.py-3.text-6xl.font-title.font-extrabold= article[0]
              p!= article.substring(1).replace(/\n/g, "<br>")

      .mx-auto.w-full.max-w-screen-md.px-5
        hr.border-white.border-opacity-25.mb-14

      section.social.flex-wrap.cursor-pointer.z-10.text-white.mx-auto.max-w-screen-md
        a.px-6.py-3.cursor-pointer.underline.inline-block Twitter
        a.px-6.py-3.cursor-pointer.underline.inline-block Facebook
        a.px-6.py-3.cursor-pointer.underline.inline-block Instagram
        a.px-6.py-3.cursor-pointer.underline.inline-block Medium

      .mx-auto.w-full.max-w-screen-md.px-5
        hr.border-white.border-opacity-25.my-8

      +back-to-top

    .text-white(class="bg-white bg-opacity-15 hover:bg-gray-600 hover:bg-opacity-15")
      .px-5.py-8.mx-auto.w-full.tracking-wide.max-w-screen-md.relative
        a.rounded-lg.py-5.block(href=next.url)
          p.text-gray-600.mb-5 Next
          section.flex
            .w-full.max-w-screen-md
              .text-lg.w-full.leading-snug.tracking-wider.layer
                h1.text-3xl.font-title.font-medium= next.title
              p.tracking-wide.leading-8.text-lg.text-gray-400.pt-8.pb-2= next.description

block footer
