mixin navbar()
  nav.navbar.px-2.bg-transparent.fixed.w-full.z-20.focus(class="sm:px-5" role="navigation")
    .navbar-overlay.w-full
    .navbar-height.navbar-mini.theme-bg.w-full
    .navbar-large.theme-bg.w-full
    .h-full.w-full.max-w-screen-lg.flex.mx-auto.z-5
      +link({
        href: "/",
        class: "navbar-height navbar-logo navbar-link cursor-pointer relative z-10"
      })
        .flex
          +icon("jabodent")(class="self-center mr-4")
          span Jabodent

      section(class="md:flex-row lt-md:h-screen md:relative md:leading-inherit md:text-base lt-md:w-full").navbar-list.flex.flex-col.whitespace-no-wrap.justify-center.absolute.leading-loose.text-4xl
        +link({
          href: "/about",
          class: "navbar-link navbar-item font-thin",
          content: "About Us"
        })(data-path="/about(.html)?")

        +link({
          href: "/services",
          class: "navbar-link navbar-item font-thin",
          content: "Our Services"
        })(data-path="/service(.html|s\/)?")

        +link({
          href: "/contact",
          class: "navbar-link navbar-item font-thin",
          content: "Contact Us"
        })(data-path="/contact(.html)?")

        +link({
          href: "/404",
          class: "block navbar-link navbar-item font-thin md:hidden",
          content: "Our Blog"
        })

      section.navbar-height.flex.w-full.whitespace-no-wrap.relative
        .flex-grow
        +link({
          href: "/404",
          class: "hidden navbar-link navbar-item font-thin md:block",
          content: "Our Blog"
        })

        button.hide-no-script.search-btn.block.navbar-icon.cursor-pointer.group(type="button", aria-label="Search button" role="button", title="Close")
          div(class="rounded-full flex justify-c-center w-12 h-12 mx-auto hover:border-black focus:outline-none text-xl")
            .self-center
              .search-icon
                i.icon.text-2xl(class="group-hover:opacity-65", title="Search")
                  +icon("search")

        button.hide-no-script.theme-switch.block.navbar-icon.cursor-pointer.group(type="button", role="button" aria-label="Light/Dark mode toggle" title="Switch Theme")
          div(class="rounded-full flex justify-c-center w-12 h-12 mx-auto hover:border-black focus:outline-none text-xl")
            .self-center
              i.icon.text-2xl(class="group-hover:opacity-65")
                +icon("theme_switcher")

        button.navbar-menu.block.navbar-icon.cursor-pointer.group(class="focus:outline-none md:hidden" type="button", role="button" aria-label="Navigation bar button" title="Menu")
          div(class="rounded-full flex justify-c-center w-12 h-12 mx-auto hover:border-black focus:outline-none text-xl")
            .self-center
              i.icon.text-3xl(class="group-hover:opacity-65")
                +icon("menu_double_bar")

