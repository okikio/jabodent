mixin link(arg = {})
  -
    let { content, href } = arg;
    let _class = arg.class || "layout-inline";
    let _html = self.netlify ? "" : ".html";
    let _href = href === "/" ? (self.netlify ? '/' : '/index.html') : (href[0] === "/" ? `${href}${_html}` : href);

  a(href=_href class=_class)&attributes(attributes)= content
    block
