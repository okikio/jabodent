include /components/image.pug
mixin card(service = {}, even = false)
  -
    let url = service.url;
    let title = service.title;
    let description = service.description;
    let { image } = service;

  a(href=url class=`${!even ? "md:pr-8" : ""} md:max-w-1/2`).card.col.block.intro-animation.cursor-pointer.group.pb-8
    section.rounded-lg.relative.overflow-hidden.h-72.bg-primary.text-white
      +image(image)
      .p-5.left-half.w-full
        h3(class="group-hover:underline").text-xl.mb-3.font-extrabold= title
        p.line-clamp= description
