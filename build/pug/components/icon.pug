mixin icon(name = "menu")
  -
    let icon = self.icons[name];
  if Array.isArray(icon) || typeof icon === "string"
    svg(xmlns="http://www.w3.org/2000/svg" enable-background="new 0 0 24 24" viewBox="0 0 24 24" fill="currentcolor" width="24" height="24")&attributes(attributes)
      path(fill="none" d="M0 0h24v24H0z")
      if Array.isArray(icon)
        each path in icon
          path(d=`${path}`.trim())
      else
        path(d=`${icon}`.trim())